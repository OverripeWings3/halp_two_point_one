<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Class Name"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/class_name"/>
        <TextView
            android:id="@+id/class_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_name"
            android:text="Class room"
            android:paddingTop="7dp"/>
        <TextView
            android:id="@+id/class_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/class_room"
            android:layout_below="@id/class_name"
            android:text="Class time"
            android:paddingTop="7dp"
            android:paddingLeft="7dp"/>

        <TextView
            android:id="@+id/class_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/class_name"
            android:layout_above="@id/class_room"
            android:text="Class teacher"
            android:layout_centerVertical="true"
            android:paddingTop="7dp"
            android:paddingLeft="10dp"/>


        <ImageView
            android:id="@+id/task_check"
            android:src="@drawable/ic_class"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>