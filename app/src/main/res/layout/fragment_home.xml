<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Assignments:"
        android:textSize="20sp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/text_next"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:background="@android:color/darker_gray"
        android:id="@+id/fragment_recycler"
        />

    <TextView
        android:id="@+id/text_next1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Class:"
        android:layout_below="@id/fragment_recycler"
        android:textSize="20sp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/text_next1"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:background="@android:color/darker_gray"
        android:id="@+id/fragment_recycler1"
        />


</RelativeLayout>